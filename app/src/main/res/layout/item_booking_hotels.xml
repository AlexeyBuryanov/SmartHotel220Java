<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/ivPicture"
        android:layout_marginStart="23dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/pic_hotel" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFullCity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.Text.Regular"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tvNameHotel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.Text.Light"
            android:textAlignment="textStart"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.Text.Regular"
            android:textAlignment="textStart"
            android:textColor="@color/teal_700"
            android:textSize="16sp"/>
        <RatingBar
            android:id="@+id/rbRatingHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"/>
    </LinearLayout>
</LinearLayout>